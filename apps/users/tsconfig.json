{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"importHelpers": false,
		"skipLibCheck": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"incremental": true,
		"esModuleInterop": true,
		"paths": {
			"@application/*": ["./src/application/*"],
			"@infra/*": ["./src/infra/*"],
			"@test/*": ["./test/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
